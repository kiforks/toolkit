{
	"name": "@kiforks/toolkit",
	"version": "0.2.7",
	"license": "MIT",
	"scripts": {
		"start": "nx serve --runner=local",
		"build": "nx run-many --target=build --runner=local",
		"production": "nx run-many --target=build --configuration production --projects=tag:type:lib --runner=local",
		"test": "nx run-many --target=test --runner=local",
		"format": "nx format:write --runner=local",
		"stylelint": "nx run-many --target=stylelint --fix --runner=local",
		"lint": "nx run-many --target=lint --quiet --fix --runner=local",
		"validate": "nx run-many -t stylelint lint --runner=local && nx format:check",
		"connect": "nx connect",
		"migrate": "nx migrate latest && nx migrate @angular/core@latest && nx migrate --run-migrations --if-exists npm cache clean --force && npm install",
		"prepare": "husky install",
		"update": "ncu -u && npm install",
		"ci-format": "npx nx format:check --base=origin/main --head=HEAD --exclude=@kiforks/toolkit",
		"ci-build": "npx nx affected -t build --base=origin/main --head=HEAD --exclude='*,!tag:type:lib' --configuration=production",
		"ci-test": "npx nx affected -t test --base=origin/main --head=HEAD --exclude='*,!tag:type:lib' --configuration=production",
		"ci-lint": "npx nx affected -t stylelint lint --base=origin/main --head=HEAD --exclude='*,!tag:type:lib'"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "~17.3.7",
		"@angular-devkit/core": "~17.3.7",
		"@angular-devkit/schematics": "~17.3.7",
